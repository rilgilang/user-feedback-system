generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  username   String    
  email      String    @unique
  password   String    
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())


  feedback Feedback[]

  @@map("user")
}

model Feedback {
  id            String          @id @default(uuid())
  user_id       String          
  title         String          
  status        FeedbackStatus  @default(PENDING)
  description   String          
  type          FeedbackType    @default(GENERAL_FEEDBACK)
  created_at    DateTime        @default(now())
  updated_at    DateTime        @default(now())

  user User @relation(fields: [user_id], references: [id])

  @@map("feedback")
}

enum FeedbackStatus {
  PENDING
  REVIEWED
  RESOLVED
}

enum FeedbackType {
  BUG_REPORT
  FEATURE_REQUEST
  GENERAL_FEEDBACK
}

